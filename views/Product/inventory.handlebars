<h2>Inventory</h2>
<section>


<table border="1" style="text-align: center;">
        <thead>
                <th>Title</th>
                <th>Quantity</th>
                <th>Price</th>
        </thead>
        <tbody>
            {{#each data}}
                <tr>
                   <td>
                        <a href="" class="task-title">{{this.title}}</a>
                   </td>
                   <td>
                       <span>{{this.quantity}}</span>
                      
                   </td>
                   <td>
                        <span>{{this.price}}</span>
                   </td>
                   <td>
                        <a href="/product/edit/{{this.id}}" class="edit-delete-button">Edit</a>
                        <a href="/product/delete/{{this.id}}?method=DELETE" class="edit-delete-button">Delete</a>
                   </td> 
                </tr>

                {{else}}
                    <td colspan="5">
                        <p>No products in the database</p>
                    </td>

                {{/each}}
    </tbody>
    </table>

</section>

<div id="tasks-links-holder">
    <a href="/product/add">Add a Product</a>
</div>